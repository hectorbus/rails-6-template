            i.m-menu__link-icon.flaticon-users
            span.m-menu__link-text = t('.users')
            i.m-menu__ver-arrow.la.la-angle-right
          .m-menu__submenu
            span.m-menu__arrow
            ul.m-menu__subnav
              - if has_policy('Users::Registrations', %w(new_user))
                li.m-menu__item aria-haspopup="true"
                  = link_to(new_user_path, class: 'm-menu__link')
                    i.m-menu__link-bullet.m-menu__link-bullet--dot
                      span
