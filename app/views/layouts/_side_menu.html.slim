#m_aside_left.m-grid__item.m-aside-left.m-aside-left--skin-dark
  #m_ver_menu.m-aside-menu.m-aside-menu--skin-dark.m-aside-menu--submenu-skin-dark.m-scroller.ps.ps--active-y m-menu-dropdown-timeout="500" m-menu-scrollable="1" m-menu-vertical="1" style=("position: relative; height: 728px; overflow: hidden;")
    ul.m-menu__nav.m-menu__nav--dropdown-submenu-arrow
      li class="m-menu__item #{'m-menu__item--active' if controller_name.eql?('home')}" aria-haspopup="true"
        a.m-menu__link href="/"
          i.m-menu__link-icon.flaticon-line-graph
          span.m-menu__link-title
            span.m-menu__link-wrap
              span.m-menu__link-text = t('.dashboard')
      li.m-menu__section
        h4.m-menu__section-text = t('.administration')
        i.m-menu__section-icon.flaticon-more-v2
      - if has_policy('Users::Registrations', %w(index new_user))
        li aria-haspopup="true" m-menu-submenu-toggle="hover" class="m-menu__item m-menu__item--submenu #{'m-menu__item--open m-menu__item--active' if controller_name.eql?('registrations')}"
